{
  "name": "cypresse2e",
  "version": "1.0.0",
  "description": "test E2E",
  "main": "index.js",
  "scripts": {
    "ui-regression": "cypress run --browser chrome --spec cypress/e2e/bank-accouns/*.feature,cypress/e2e/Payments/*.feature,cypress/e2e/Notifications/*.feature",
    "ui-regression-allure": "cypress run --browser chrome --spec cypress/e2e/bank-accouns/*.feature,cypress/e2e/Payments/*.feature,cypress/e2e/Notifications/*.feature --env allure=true",
    "allure:clear": "rm -r allure-results/ allure-report cypress/screenshots || true ",
    "allure:report": "npx allure generate allure-results --clean -o allure-report",
    "generate-cucumber-report": "npx createcucumberhtmlreport.js",
    "cypress:open": "cypress open"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/report/cucumber-json",
      "fileSuffix": ".cucumber"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marianamon/CypressE2E.git"
  },
  "keywords": [
    "cypress"
  ],
  "author": "Mariana Alzate S",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marianamon/CypressE2E/issues"
  },
  "homepage": "https://github.com/marianamon/CypressE2E#readme",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.39.1",
    "allure-commandline": "^2.21.0",
    "cypress": "^13.12.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "multiple-cucumber-html-reporter": "^3.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "docker": "^1.0.0"
  }
}
